<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>
    <nav class="navbar navbar-dark bg-primary justify-content-between">
        <a class="navbar-brand text-white">ADMIN PANEL</a>
        <!-- <form class="form-inline">
            <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search" aria-label="Search">
        </form> -->
        <form action="logout" method="post">
            <button class="btn btn-outline-dark bg-dark my-2 my-sm-0 text-white" type="submit">Logout</button>
        </form>
    </nav>

    <table id="sample" class="table table-striped table-bordered" style="width:100%">

        <thead>


            <tr>
                <th colspan="3">USER DATA collectors</th>
                <th colspan="2"><a href="admin/createUser" class="btn btn-success">CREATE USER</a></th>
            </tr>


            <tr>
                <th>USER</th>
                <th>EMAIL</th>
                <th>PASSWORD</th>
                <th>DELETE</th>
                <th>EDIT</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(element=> { %>
                <tr>
                    <td>
                        <%=element.username %>
                    </td>
                    <td>
                        <%=element.email %>
                    </td>
                    <td>
                        <%=element.password %>
                    </td>
                    <td>
                        <a href="admin/deleteUser/<%= element._id %> " class="btn btn-danger">DELETE</a>
                    </td>
                    <td><a href="admin/editUser/<%= element._id %> " class="btn btn-success">EDIT</a> </td>
                    <td>
                        <% element._id %>
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>




    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>


